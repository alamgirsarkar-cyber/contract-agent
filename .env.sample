# Server Configuration
PORT=4000
NODE_ENV=development
API_VERSION=v1

# Database
DATABASE_PATH=./data/contract_hub.db

# Ollama Configuration (Local LLM)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b
OLLAMA_EMBEDDING_MODEL=nomic-embed-text

# ChromaDB Configuration
CHROMA_PATH=./data/chroma_db
CHROMA_COLLECTION_NAME=contracts_knowledge

# JWT & Security
JWT_SECRET=your-super-secret-jwt-key-change-in-production-please
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=10

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./data/uploads

# RAG Configuration
CHUNK_SIZE=800
CHUNK_OVERLAP=200
TOP_K_RETRIEVAL=5
SIMILARITY_THRESHOLD=0.7

# Validation Configuration
VALIDATION_CONFIDENCE_THRESHOLD=0.8
PRICE_TOLERANCE_PERCENT=5


# .env file
# Your unique Supabase Project URL
SUPABASE_URL=
# Your Supabase API Key (Use the Anon Public Key for client-side/public apps,
# or the Service Role Key for secure, backend Node.js apps)
SUPABASE_KEY=
GEMINI_API_KEY=
OPENAI_API_KEY=

# LLM Provider Configuration
# Switch between providers by changing this value
# Options: "ollama" (free, local) or "gemini" (paid, cloud with quota)
LLM_PROVIDER=ollama